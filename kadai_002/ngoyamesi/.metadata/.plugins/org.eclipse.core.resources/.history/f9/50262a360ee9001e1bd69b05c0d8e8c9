let maxDate = new Date();
 maxDate = maxDate.setMonth(maxDate.getMonth() + 3);
 
 flatpickr('#fromReservationDayDate', {
    dateFormat: "Y-m-d",
   enableTime: true,
   locale: 'ja',
   minDate: 'today',
   maxDate: maxDate
 });
 
  flatpickr('#fromReservationTime', {
    dateFormat: "Y-m-d",
   enableTime: true,
   locale: 'ja',
   minDate: 'today',
   maxDate: maxDate
 });